# only do anything on block devices which are not removed
ACTION!="add|change", GOTO="cdrom_end"

# set CDROM speed
KERNEL=="sr*", RUN+="/usr/bin/speedcontrol -x8 /dev/%k"

LABEL="cdrom_end"
