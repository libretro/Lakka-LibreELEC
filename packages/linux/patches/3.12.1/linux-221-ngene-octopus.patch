+static u16 calc_pcs16(struct dvb_ns_params *p, int ipv)
+{
+	u32 sum = 0, i;
+	u16 pcs;
+
+	for (i = 0; i < ipv ? 16 : 4; i += 2) {
+		sum += (p->sip[i] << 8) | p->sip[i + 1];
+		sum += (p->dip[i] << 8) | p->dip[i + 1];
+	}
+	sum += 0x11; /* UDP proto */
+	sum = (sum >> 16) + (sum & 0xffff);
+	pcs = sum;
+	return pcs;
