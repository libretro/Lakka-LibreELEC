+static u16 calc_pcs(struct dvb_ns_params *p)
+{
+	u32 sum = 0;
+	u16 pcs;
+
+	sum += (p->sip[0] << 8) | p->sip[1];
+	sum += (p->sip[2] << 8) | p->sip[3];
+	sum += (p->dip[0] << 8) | p->dip[1];
+	sum += (p->dip[2] << 8) | p->dip[3];
