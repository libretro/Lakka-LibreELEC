+	mod_set_down_converter_vco(dev, 0x00000003);
+	mod_set_down_converter_vco(dev, 0x18001E42 | ((RefMul-1) << 25) | 
+				   ((RefDiv2-1) << 24) | (RefDiv << 14) );
+	mod_set_down_converter_vco(dev, 0x08008021);
