+static inline int
+verify_2d_tail(uint32_t const **buffer, const uint32_t *buf_end,
+	uint32_t dwords)
+{
+	const uint32_t *buf = *buffer;
+
+	if (buf_end - buf < dwords) {
+		DRM_ERROR("Illegal termination of 2d command.\n");
+		return 1;
+	}
+
+	while (dwords--) {
+		if (!is_dummy_cmd(*buf++)) {
+			DRM_ERROR("Illegal 2d command tail.\n");
+			return 1;
+		}
+	}
+
+	*buffer = buf;
+	return 0;
+}
