+	if ((dev_priv->chip_sub_index == CHIP_H5 ||
+		dev_priv->chip_sub_index == CHIP_H6S2) &&
+		(dev_priv->drm_agp_type == DRM_AGP_RING_BUFFER)) {
+		ADDCmdHeader2_INVI(lpcmDMAManager->pFree, INV_REG_CR_TRANS,
+				   INV_ParaType_Dummy);
