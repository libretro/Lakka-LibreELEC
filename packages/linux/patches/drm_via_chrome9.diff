+static inline int is_dummy_cmd(uint32_t cmd)
+{
+	if ((cmd & INV_DUMMY_MASK) == 0xCC000000 ||
+			(cmd & INV_DUMMY_MASK) == 0xCD000000 ||
+			(cmd & INV_DUMMY_MASK) == 0xCE000000 ||
+			(cmd & INV_DUMMY_MASK) == 0xCF000000 ||
+			(cmd & INV_DUMMY_MASK) == 0xDD000000)
+			return 1;
+	return 0;
+}
