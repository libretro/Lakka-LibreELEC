+	} else {
+		if ((u32)
+		    ((unsigned long *) lpcmDMAManager->pFree) & 0x1f) {
+			ADDCmdHeader2_INVI(lpcmDMAManager->pFree,
+					   INV_REG_CR_TRANS,
+					   INV_ParaType_Dummy);
+			do {
+				ADDCmdData_INVI(lpcmDMAManager->pFree,
+						0xCCCCCCC0);
+				ADDCmdData_INVI(lpcmDMAManager->pFree,
+						0xDDD00000);
+			}
+			while ((u32)((unsigned long *) lpcmDMAManager->pFree) &
+				0x1f)
