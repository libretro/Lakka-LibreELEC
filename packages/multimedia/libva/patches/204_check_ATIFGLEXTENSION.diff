+typedef struct _FGLGetDriverData {
+    CARD8   reqType;
+    CARD8   fireglReqType;
+    CARD16  length B16;
+    CARD32  screen B32;
+    CARD16  size B16;
+    CARD16  pad1;
+} xFGLGetDriverDataReq;
