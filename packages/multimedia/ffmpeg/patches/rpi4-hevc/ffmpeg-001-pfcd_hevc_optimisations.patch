+///////////////////////////////////////////////////////////////////////////////
+// Wait until phase 2 idle
+
+static void wait_idle(RPI_T *rpi, int last) {
+    for (;;) {
+        int order;
+        pthread_mutex_lock  (&rpi->mutex_phase2);
+        order = rpi->phase2_order;
+        pthread_mutex_unlock(&rpi->mutex_phase2);
+        if (order==last) return;
+    }
+}
