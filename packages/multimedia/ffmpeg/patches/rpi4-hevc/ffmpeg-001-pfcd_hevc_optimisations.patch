+    }
+    free(buf);
+#endif
+    rpi->thread_avctx[thread_idx] = 0;
+    pthread_mutex_unlock(&rpi->mutex_phase2);
+    hwaccel_mutex(avctx, pthread_mutex_lock);
+    return 0;
+}
