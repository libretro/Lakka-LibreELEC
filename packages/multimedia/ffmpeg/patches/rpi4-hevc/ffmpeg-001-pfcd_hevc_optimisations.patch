+static void program_slicecmds(RPI_T *rpi, int sliceid) {
+    int i;
+    p1_apb_write(rpi, RPI_SLICECMDS, rpi->num_slice_msgs+(sliceid<<8));
+    for(i=0; i<rpi->num_slice_msgs; i++) {
