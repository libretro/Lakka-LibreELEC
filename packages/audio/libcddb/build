#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libcdio

export ac_cv_func_malloc_0_nonnull=yes
export ac_cv_func_realloc_0_nonnull=yes

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --with-gnu-ld \

make

$MAKEINSTALL