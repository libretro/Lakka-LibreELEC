#!/bin/sh

. config/options

$SCRIPTS/build toolchain

CFLAGS="$CFLAGS -I$BUILD/$1*/src/xvmc"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --with-xorg-module-dir=$XORG_PATH_MODULES

make

$STRIP src/{,ch7017,ch7xxx,ivch,sil164,tfp410}/.libs/*.so
