. config/options $1

cd $PKG_BUILD

setup_toolchain host

mkdir -p .build-host && cd .build-host

../configure --host=$HOST_NAME \
            --build=$HOST_NAME \
            --prefix=$ROOT/$TOOLCHAIN \
            --disable-static \
            --enable-shared \
            --disable-unittest \
            --with-server=no \
            --with-sdk=yes \
            --with-demos=no \
            --with-epoll=yes \
            --with-ssl=no \
            --with-stressjob=no

make
make install

cd ..

setup_toolchain target

strip_lto

mkdir -p .build-target && cd .build-target

../configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-unittest \
            --with-sysroot=$SYSROOT_PREFIX \
            --with-server=no \
            --with-sdk=no \
            --with-demos=no \
            --with-epoll=yes \
            --with-ssl=no \
            --with-stressjob=no

$MAKEINSTALL
