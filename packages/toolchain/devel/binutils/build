#!/bin/sh

. config/options

$SCRIPTS/install ccache

setup_toolchain host

cd $PKG_BUILD
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --with-sysroot=$SYSROOT_PREFIX \
             --disable-multilib \
             --disable-nls

make configure-host
make
