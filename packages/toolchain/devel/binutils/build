#!/bin/sh

. config/options

$SCRIPTS/install ccache

if [ $TARGET_ARCH = "x86_64" -o $TARGET_ARCH = "powerpc64" ]; then
  WITH_64B_BFD="--enable-64-bit-bfd"
fi

setup_toolchain host

cd $PKG_BUILD
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --with-sysroot=$SYSROOT_PREFIX \
             --disable-werror \
             --disable-multilib \
             $WITH_64B_BFD \
             --disable-nls

make
