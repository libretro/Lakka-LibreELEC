. config/options $1

$SCRIPTS/unpack gcc

setup_toolchain host

cd $BUILD/gcc*

autoconf-2.64

mkdir -p objdir-$1 && cd objdir-$1
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --with-sysroot=$SYSROOT_PREFIX \
             --with-gmp=$ROOT/$TOOLCHAIN \
             --with-mpfr=$ROOT/$TOOLCHAIN \
             --with-mpc=$ROOT/$TOOLCHAIN \
             --with-ppl=$ROOT/$TOOLCHAIN \
             --disable-ppl-version-check \
             --with-cloog=$ROOT/$TOOLCHAIN \
             --with-libelf=$ROOT/$TOOLCHAIN \
             --with-gnu-as \
             --with-gnu-ld \
             --enable-languages=c \
             --disable-__cxa_atexit \
             --disable-libada \
             --disable-libmudflap \
             --enable-gold=both/ld \
             --enable-plugin \
             --enable-lto \
             --disable-libssp \
             --disable-libgomp \
             --disable-shared \
             --disable-multilib \
             --disable-threads \
             --without-headers \
             --with-newlib \
             --disable-decimal-float \
             --disable-nls

make
make install
