. config/options $1

cd $PKG_BUILD
ac_cv_have_decl_TUNSETPERSIST=no \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-server \
            --enable-password-save \
            --disable-plugins \
            --enable-iproute2 IPROUTE="/sbin/ip" \
            --disable-management \
            --disable-socks \
            --disable-http-proxy \
            --disable-fragment \
            --disable-multihome \
            --disable-port-share \
            --disable-debug \


make
