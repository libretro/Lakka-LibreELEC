. config/options $1

$SCRIPTS/unpack file

setup_toolchain host

cd $BUILD/file-*

mkdir -p .build-host && cd .build-host
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --enable-shared \
             --disable-static \
             --enable-fsect-man5 \
             --disable-rpath

make
make install
