#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --exec-prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --enable-shared \
            --disable-static \

make

cp -P libattr/.libs/*.so* $SYSROOT_PREFIX/usr/lib/
