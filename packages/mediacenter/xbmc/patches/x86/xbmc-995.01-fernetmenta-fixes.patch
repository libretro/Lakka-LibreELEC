+/* callback for the ffmpeg lock manager */
+int ffmpeg_lockmgr_cb(void **mutex, enum AVLockOp operation)
+{
+  CSharedSection **lock = (CSharedSection **)mutex;
+
+  switch (operation)
+  {
+    case AV_LOCK_CREATE:
+    {
+      *lock = NULL;
+      *lock = new CSharedSection();
