@@ -704,7 +704,15 @@ bool CDVDVideoCodecFFmpeg::GetPictureCommon(DVDVideoPicture* pDvdVideoPicture)
 
   int64_t bpts = av_frame_get_best_effort_timestamp(m_pFrame);
