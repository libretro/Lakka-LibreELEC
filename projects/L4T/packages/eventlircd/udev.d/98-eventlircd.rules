  ENV{eventlircd_evmap}="xiaomibtremoteAM.evmap"
  
 # iMON Ultrabay Front Panel
SUBSYSTEMS=="input", ATTRS{name}=="iMON Panel, Knob and Mouse(15c2:ffdc)", \
