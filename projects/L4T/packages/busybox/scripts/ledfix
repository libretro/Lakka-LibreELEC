# find heartbeat triggers and set them to none
case $(dtsoc) in
  amlogic*)
    for triggerfile in $(find /sys/devices/platform/leds -name trigger); do
      trigger=$(awk -F'[][]' '{print $2}' "$triggerfile")
      if [ "$trigger" = "heartbeat" ]; then
        echo "none" > "$triggerfile"
      fi
    done
  ;;
esac
