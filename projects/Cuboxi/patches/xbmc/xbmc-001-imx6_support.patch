+void *CIMXRenderingFrames::GetPhyAddr(int idx)
+{
+
+  CSingleLock lock(m_renderingFramesLock);
+  if (!m_ready)
+    return NULL;
+  if ((idx < 0) || (idx >= m_bufferNum))
+    return NULL;
+
+  return (void *)m_v4lBuffers[idx].m.offset;
+}
