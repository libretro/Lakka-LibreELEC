+bool CEGLNativeTypeIMX::CheckCompatibility()
+{
+  char name[256] = {0};
+  get_sysfs_str("/sys/class/graphics/fb0/device/modalias", name, 255);
+  CStdString strName = name;
+  StringUtils::Trim(strName);
