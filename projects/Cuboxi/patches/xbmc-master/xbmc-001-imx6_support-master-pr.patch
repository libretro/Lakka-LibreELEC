+void CIMXRenderingFrames::ReleaseBuffers()
+{
+  CSingleLock lock(m_renderingFramesLock);
+  if (!m_ready)
+  {
+      CLog::Log(LOGERROR, "%s - AllocateBuffers was not previously called\n", __FUNCTION__);
+      return;
+  }
+  __ReleaseBuffers();
+}
