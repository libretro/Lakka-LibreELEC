 	/*rmii or rgmii*/
 	switch (bsp_priv->phy_iface) {
@@ -1014,23 +1014,61 @@ static int rk_gmac_init(struct platform_device *pdev, void *priv)
 	if (ret)
 		return ret;
 
-	pm_runtime_enable(&pdev->dev);
-	pm_runtime_get_sync(&pdev->dev);
